AreaCheck("%NashkelMines%")
Dead("prism")
See("prism")
Global("X#KPD","GLOBAL",0)
InParty(Myself)
!StateCheck(Myself,CD_STATE_NOTVALID)
InMyArea(Player1)
!StateCheck(Player1,CD_STATE_NOTVALID)
CombatCounter(0)
!See([ENEMY])
THEN
RESPONSE #100
SetGlobal("X#KPD","GLOBAL",1)
END

